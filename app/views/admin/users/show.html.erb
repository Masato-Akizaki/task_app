<% provide(:title, @user.name) %>
<h2 class="admin">【管理画面】</h2>
<%= render 'shared/error_messages', form_object: @user %>
<h1><%= @user.name %></h1>
<div class="new-task">
    <%= link_to "編集" , edit_admin_user_path, class: "btn btn-primary"%>
    <%= link_to "削除" , admin_user_path, method: :delete,
                      data: { confirm: "このユーザーを削除しますか？" },
                      class: "btn btn-primary btn-2" %>
  </div>
<table class="table">
  <tbody>
    <tr>
      <td>id</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>ユーザー名</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>タスク数</td>
      <td><%= @user.tasks.count %></td>
    </tr>
    <tr>
      <td>登録日</td>
      <td><%= @user.created_at %></td>
    </tr>
  </tbody>
</table>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>タスク名</th>
      <th>詳細</th>
      <th>期限日</th>
      <th>ステータス</th>
      <th>優先度</th>
      <th>登録日</th>
      <th>ラベル</th>
    </tr>
  </thead>
  <tbody>
    <%= render @tasks %>
  </tbody>
</table>
<%= paginate @tasks %>